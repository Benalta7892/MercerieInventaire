<h2 class="mb-4">Tableau de bord</h2>

<div class="row g-3 mb-4">
  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">Total fournitures</div>
        <div class="fs-3 fw-bold text-primary"><%= @fournitures_count %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">Stocks bas</div>
        <div class="fs-3 fw-bold text-warning"><%= @stock_bas_count %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">À acheter</div>
        <div class="fs-3 fw-bold text-success"><%= @a_acheter_count %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">Catégories</div>
        <div class="fs-3 fw-bold"><%= @categories_count %></div>
      </div>
    </div>
  </div>
</div>

<div class="row g-3 mb-4">
  <!-- Stock bas -->
  <div class="col-12 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">Stock bas</h5>
          <%= link_to "Voir tous les stocks bas",
                stock_bas_fournitures_path,
                class: "btn btn-sm btn-outline-warning" %>
        </div>

        <% if @stock_bas.empty? %>
          <p class="text-muted mb-0">Aucun stock bas.</p>
        <% else %>
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Catégorie</th>
                  <th class="text-nowrap">Quantité</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @stock_bas.each do |f| %>
                  <tr>
                    <td>
                      <%= link_to f.name,
                            fourniture_path(f),
                            class: "text-decoration-none fw-semibold" %>

                      <% if f.description.present? %>
                        <div class="text-muted small"><%= truncate(f.description, length: 60) %></div>
                      <% end %>
                    </td>

                    <td class="text-muted"><%= f.category&.name || "—" %></td>

                    <td class="text-nowrap text-muted"><%= f.quantity %> <%= f.unit %></td>

                    <td class="text-end text-nowrap">
                      <%= button_to "Ajouter à la liste d'achats",
                            liste_achat_items_path(fourniture_id: f.id),
                            method: :post,
                            class: "btn btn-sm btn-outline-success" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Derniers ajouts -->
  <div class="col-12 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">Derniers ajouts</h5>
          <%= link_to "Voir tout", fournitures_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>

        <% if @derniers_ajouts.empty? %>
          <p class="text-muted mb-0">Aucune fourniture.</p>
        <% else %>
          <div class="table-responsive">
            <table class="table align-middle mb-0">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Catégorie</th>
                  <th class="text-nowrap">Quantité</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @derniers_ajouts.each do |f| %>
                  <tr>
                    <td>
                      <%= link_to f.name,
                            fourniture_path(f),
                            class: "text-decoration-none fw-semibold" %>

                      <% if f.description.present? %>
                        <div class="text-muted small"><%= truncate(f.description, length: 60) %></div>
                      <% end %>
                    </td>

                    <td class="text-muted"><%= f.category&.name || "—" %></td>

                    <td class="text-nowrap text-muted"><%= f.quantity %> <%= f.unit %></td>

                    <td class="text-end text-nowrap">
                      <%= button_to "Ajouter à la liste d'achats",
                            liste_achat_items_path(fourniture_id: f.id),
                            method: :post,
                            class: "btn btn-sm btn-outline-success invisible" %>
                    </td>

                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="row g-3">
  <div class="col-12 col-md-4">
    <%= link_to "Voir tout mon stock", fournitures_path, class: "btn btn-outline-secondary w-100 py-3 fw-semibold" %>
  </div>

  <div class="col-12 col-md-4">
    <%= link_to "Ajouter une fourniture", new_fourniture_path, class: "btn btn-primary w-100 py-3 fw-semibold" %>
  </div>

  <div class="col-12 col-md-4">
    <%= link_to "Liste d'achats", liste_achat_path, class: "btn btn-outline-success w-100 py-3 fw-semibold" %>
  </div>
</div>
