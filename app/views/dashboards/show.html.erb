<h2 class="mb-4">Tableau de bord</h2>

<% if user_signed_in? %>
  <%= form_with url: fournitures_path, method: :get, local: true, class: "d-flex mb-4" do %>
    <%= text_field_tag :query,
          params[:query],
          class: "form-control me-2",
          placeholder: "Rechercher…" %>

    <%= submit_tag "Rechercher", class: "btn btn-outline-primary" %>
  <% end %>
<% end %>


<div class="row g-3 mb-4">
  <div class="col-6 col-lg-3">
    <div class="card shadow-sm h-100">
      <%= link_to fournitures_path, class: "text-decoration-none text-reset d-block h-100" do %>
        <div class="card-body">
          <h5>Stock total</h5>
          <div class="d-flex justify-content-between align-items-baseline">
            <div class="fs-3 fw-bold text-primary"><%= @fournitures_count %></div>
            <div class="text-muted">
              Valeur totale :
              <strong><%= number_to_currency(@stock_total_value_cents / 100.0, unit: "€") %></strong>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-6 col-lg-3">
    <div class="card shadow-sm h-100">
      <%= link_to stock_bas_fournitures_path,
          class: "text-decoration-none text-reset d-block h-100" do %>
        <div class="card-body">
          <h5>Stocks bas</h5>
          <div class="d-flex justify-content-between align-items-baseline">
            <div class="fs-3 fw-bold text-warning"><%= @stock_bas_count %></div>
            <div class="text-muted">
              Valeur totale :
              <strong><%= number_to_currency(@stock_bas_value_cents / 100.0, unit: "€") %></strong>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-6 col-lg-3">
    <div class="card shadow-sm h-100">
      <%= link_to liste_achat_path,
          class: "text-decoration-none text-reset d-block h-100" do %>
        <div class="card-body">
          <h5>À acheter</h5>
          <div class="d-flex justify-content-between align-items-baseline">
            <div class="fs-3 fw-bold text-success"><%= @a_acheter_count %></div>
            <div class="text-muted">
              Valeur totale :
              <strong><%= number_to_currency(@a_acheter_value_cents / 100.0, unit: "€") %></strong>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-6 col-lg-3">
    <div class="card shadow-sm h-100">
      <%= link_to categories_path,
          class: "text-decoration-none text-reset d-block h-100" do %>
        <div class="card-body">
          <h5>Catégories</h5>
          <div class="d-flex justify-content-between align-items-baseline">
            <div class="fs-3 fw-bold"><%= @categories_count %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>


  <div class="row g-3 mb-4">
    <!-- Stock bas -->
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">

          <div class="row g-2 align-items-center mb-3">
            <div class="col-12 col-sm">
              <h5 class="mb-0">Stock bas</h5>
            </div>
            <div class="col-12 col-sm-auto">
              <div class="d-grid gap-2 d-sm-flex">
                <%= link_to "Voir tous les stocks bas",
                  stock_bas_fournitures_path,
                  class: "btn btn-sm btn-outline-warning" %>
              </div>
            </div>
          </div>

          <% if @stock_bas.empty? %>
            <p class="text-muted mb-0">Aucun stock bas.</p>
          <% else %>

            <!-- MOBILE (<576) : CARTES -->
            <div class="d-block d-sm-none">
              <% @stock_bas.each do |f| %>
                <div class="card border-0 shadow-sm mb-3">
                  <div class="card-body">

                    <%= link_to f.name,
                      fourniture_path(f, return_to: request.fullpath),
                      class: "fw-semibold text-decoration-none d-block mb-1" %>

                    <% if f.description.present? %>
                      <div class="text-muted small mb-2"><%= truncate(f.description, length: 90) %></div>
                    <% end %>

                    <div class="text-muted small mb-2">
                      <strong>Catégorie :</strong> <%= f.category&.name || "—" %>
                    </div>

                    <div class="text-muted small mb-3">
                      <strong>Quantité :</strong> <%= f.quantity %> <%= f.unit %>
                    </div>

                    <div class="text-muted small mb-3">
                      <strong>Prix :</strong>
                      <% if f.price_cents.present? %>
                        <%= number_to_currency(f.price_cents / 100.0, unit: "€", format: "%n %u") %>
                      <% else %>
                        —
                      <% end %>
                    </div>


                    <%= button_to '<i class="fa-solid fa-cart-shopping" style="color: #1edd88;"></i>'.html_safe,
                      liste_achat_items_path(fourniture_id: f.id),
                      method: :post,
                      class: "btn btn-sm btn-outline-success w-100" %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- DESKTOP (>=576) : TABLE -->
            <div class="table-responsive d-none d-sm-block">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>Nom</th>
                    <th>Catégorie</th>
                    <th class="text-nowrap">Quantité</th>
                    <th class="text-nowrap text-end">Prix</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% @stock_bas.each do |f| %>
                    <tr>
                      <td>
                        <%= link_to f.name,
                          fourniture_path(f, return_to: request.fullpath),
                          class: "text-decoration-none fw-semibold" %>

                        <% if f.description.present? %>
                          <div class="text-muted small"><%= truncate(f.description, length: 60) %></div>
                        <% end %>
                      </td>

                      <td class="text-muted"><%= f.category&.name || "—" %></td>

                      <td class="text-nowrap text-muted"><%= f.quantity %> <%= f.unit %></td>

                      <td class="text-end text-nowrap text-muted">
                        <% if f.price_cents.present? %>
                          <%= number_to_currency(f.price_cents / 100.0, unit: "€", format: "%n %u") %>
                        <% else %>
                          —
                        <% end %>
                      </td>


                      <td class="text-end text-nowrap">
                        <%= button_to '<i class="fa-solid fa-cart-shopping" style="color: #1edd88;"></i>'.html_safe,
                          liste_achat_items_path(fourniture_id: f.id),
                          method: :post,
                          class: "btn btn-sm btn-outline-success" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

          <% end %>
        </div>
      </div>
    </div>


    <!-- Derniers ajouts -->
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">

          <div class="row g-2 align-items-center mb-3">
            <div class="col-12 col-sm">
              <h5 class="mb-0">Derniers ajouts</h5>
            </div>
            <div class="col-12 col-sm-auto">
              <div class="d-grid gap-2 d-sm-flex">
                <%= link_to "Voir tout",
                  fournitures_path(return_to: request.fullpath),
                  class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </div>
          </div>

          <% if @derniers_ajouts.empty? %>
            <p class="text-muted mb-0">Aucune fourniture.</p>
          <% else %>

            <!-- MOBILE (<576) : CARTES -->
            <div class="d-block d-sm-none">
              <% @derniers_ajouts.each do |f| %>
                <div class="card border-0 shadow-sm mb-3">
                  <div class="card-body">

                    <%= link_to f.name,
                      fourniture_path(f, return_to: request.fullpath),
                      class: "fw-semibold text-decoration-none d-block mb-1" %>

                    <% if f.description.present? %>
                      <div class="text-muted small mb-2"><%= truncate(f.description, length: 90) %></div>
                    <% end %>

                    <div class="text-muted small mb-2">
                      <strong>Catégorie :</strong> <%= f.category&.name || "—" %>
                    </div>

                    <div class="text-muted small mb-3">
                      <strong>Quantité :</strong> <%= f.quantity %> <%= f.unit %>
                    </div>

                    <div class="text-muted small mb-3">
                      <strong>Prix :</strong>
                      <% if f.price_cents.present? %>
                        <%= number_to_currency(f.price_cents / 100.0, unit: "€", format: "%n %u") %>
                      <% else %>
                        —
                      <% end %>
                    </div>


                  </div>
                </div>
              <% end %>
            </div>

            <!-- DESKTOP (>=576) : TABLE -->
            <div class="table-responsive d-none d-sm-block">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>Nom</th>
                    <th>Catégorie</th>
                    <th class="text-nowrap">Quantité</th>
                    <th class="text-nowrap text-end">Prix</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% @derniers_ajouts.each do |f| %>
                    <tr>
                      <td>
                        <%= link_to f.name,
                          fourniture_path(f, return_to: request.fullpath),
                          class: "text-decoration-none fw-semibold" %>

                        <% if f.description.present? %>
                          <div class="text-muted small"><%= truncate(f.description, length: 60) %></div>
                        <% end %>
                      </td>

                      <td class="text-muted"><%= f.category&.name || "—" %></td>

                      <td class="text-nowrap text-muted"><%= f.quantity %> <%= f.unit %></td>

                      <td class="text-end text-nowrap text-muted">
                        <% if f.price_cents.present? %>
                          <%= number_to_currency(f.price_cents / 100.0, unit: "€", format: "%n %u") %>
                        <% else %>
                          —
                        <% end %>
                      </td>


                      <td class="text-end text-nowrap invisible">
                        <%= button_to '<i class="fa-solid fa-cart-shopping" style="color: #1edd88;"></i>'.html_safe,
                          liste_achat_items_path(fourniture_id: f.id),
                          method: :post,
                          class: "btn btn-sm btn-outline-success" %>
                      </td>

                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

          <% end %>
        </div>
      </div>
    </div>

  </div>


  <div class="row g-3">
    <div class="col-12 col-md-4">
      <%= link_to "Voir tout mon stock", fournitures_path(return_to: request.fullpath), class: "btn btn-outline-secondary w-100 py-3 fw-semibold" %>
    </div>

    <div class="col-12 col-md-4">
      <%= link_to "Ajouter une fourniture", new_fourniture_path(return_to: request.fullpath), class: "btn btn-primary w-100 py-3 fw-semibold" %>
    </div>

    <div class="col-12 col-md-4">
      <%= link_to "Liste d'achats", liste_achat_path, class: "btn btn-outline-success w-100 py-3 fw-semibold" %>
    </div>
  </div>
