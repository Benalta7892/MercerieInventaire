<h1>Dashboards#show</h1>
<p>Find me in app/views/dashboards/show.html.erb</p>

<h2 class="mb-4">Tableau de bord</h2>

<div class="row g-3 mb-4">
  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">Total fournitures</div>
        <div class="fs-3 fw-bold"><%= @fournitures_count %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">Stocks bas</div>
        <div class="fs-3 fw-bold"><%= @stock_bas_count %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">À acheter</div>
        <div class="fs-3 fw-bold"><%= @a_acheter_count %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-3">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="text-muted">Catégories</div>
        <div class="fs-3 fw-bold"><%= @categories_count %></div>
      </div>
    </div>
  </div>
</div>

<div class="row g-3 mb-4">
  <div class="col-12 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">Stock bas</h5>
          <%= link_to "Voir tout", stock_bas_fournitures_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>

        <% if @stock_bas.empty? %>
          <p class="text-muted mb-0">Aucun stock bas.</p>
        <% else %>
          <ul class="list-group list-group-flush">
            <% @stock_bas.each do |f| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold"><%= f.name %></div>
                  <small class="text-muted"><%= f.quantity %> <%= f.unit %></small>
                </div>

                <%= button_to "Ajouter à la liste",
                      liste_achat_items_path(fourniture_id: f.id),
                      method: :post,
                      class: "btn btn-sm btn-primary" %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">Derniers ajouts</h5>
          <%= link_to "Voir tout", fournitures_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>

        <% if @derniers_ajouts.empty? %>
          <p class="text-muted mb-0">Aucune fourniture.</p>
        <% else %>
          <ul class="list-group list-group-flush">
            <% @derniers_ajouts.each do |f| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <div class="fw-semibold"><%= link_to f.name, fourniture_path(f), class: "text-decoration-none" %></div>
                  <small class="text-muted">Ajouté le <%= l(f.created_at.to_date) %></small>
                </div>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row g-3">
  <div class="col-12 col-md-4">
    <%= link_to "Voir tout mon stock", fournitures_path, class: "btn btn-warning w-100 py-3 fw-semibold" %>
  </div>

  <div class="col-12 col-md-4">
    <%= link_to "Ajouter une fourniture", new_fourniture_path, class: "btn btn-primary w-100 py-3 fw-semibold" %>
  </div>

  <div class="col-12 col-md-4">
    <%= link_to "Liste d'achats", liste_achat_path, class: "btn btn-success w-100 py-3 fw-semibold" %>
  </div>
</div>
