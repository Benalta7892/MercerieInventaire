<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Modifier mon profil</h1>

  <%#= link_to "← Retour",
        #profile_path,
        class: "btn btn-outline-secondary btn-sm" %>
</div>


<%= form_with model: current_user,
      url: profile_path,
      method: :patch,
      local: true do |f| %>

  <div class="mb-3">
    <%= f.label :name, "Nom", class: "form-label" %>
    <%= f.text_field :name,
          class: "form-control",
          placeholder: "Votre nom" %>
  </div>

  <% if current_user.avatar.attached? %>
    <div class="mt-2">
      <%= image_tag current_user.avatar, class: "avatar me-2" %>

      <div class="form-check d-inline-block">
        <%= check_box_tag :remove_avatar, "1", false, class: "form-check-input", id: "remove_avatar" %>
        <%= label_tag :remove_avatar, "Supprimer l’avatar", class: "form-check-label" %>
      </div>
    </div>
  <% end %>


  <div class="mb-3">
    <%= f.label :avatar, "Avatar", class: "form-label" %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Enregistrer",
          class: "btn btn-primary btn-sm" %>

    <%= link_to "Annuler",
          profile_path,
          class: "btn btn-outline-secondary btn-sm" %>
  </div>

<% end %>
