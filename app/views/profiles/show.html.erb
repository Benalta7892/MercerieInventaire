<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Mon profil</h1>

  <%= link_to "← Retour",
        request.referer || dashboard_path,
        class: "btn btn-outline-secondary btn-sm" %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <p><strong>Nom :</strong> <%= current_user.name.presence || "—" %></p>
    <p><strong>Email :</strong> <%= current_user.email %></p>
  </div>
</div>

<div class="mt-3 d-flex gap-2">
  <%= link_to "Modifier mon Profile",
        edit_profile_path,
        class: "btn btn-outline-primary btn-sm" %>

  <%= link_to "Changer email / mot de passe",
        edit_user_registration_path,
        class: "btn btn-outline-secondary btn-sm" %>

  <%= link_to "Supprimer mon compte",
        profile_path,
        class: "btn btn-outline-danger btn-sm",
        data: { turbo_method: :delete, turbo_confirm: "Supprimer définitivement votre compte ?" } %>
</div>
