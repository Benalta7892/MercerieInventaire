<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-3 gap-2">
  <h1 class="mb-0">Mon profil</h1>

  <% if current_user.admin? %>
    <span class="badge bg-primary align-self-start align-self-sm-center">Admin</span>
  <% end %>
</div>

<div class="text-center mb-3">
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar,
          class: "avatar mb-2",
          style: "width: 120px; height: 120px; object-fit: cover;" %>
  <% else %>
    <%= image_tag "default-avatar.jpg",
          class: "avatar mb-2",
          style: "width: 120px; height: 120px; object-fit: cover;" %>
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <p class="mb-2">
      <strong>Nom :</strong>
      <%= current_user.name.presence || "—" %>

      <% if current_user.admin? %>
        <span class="ms-2 badge bg-primary">Admin</span>
      <% end %>
    </p>

    <p class="mb-0">
      <strong>Email :</strong> <%= current_user.email %>
    </p>
  </div>
</div>

<!-- Boutons -->
<div class="mt-3 d-grid gap-2 d-sm-flex align-items-stretch">
  <%= link_to "Modifier mon profil",
        edit_profile_path,
        class: "btn btn-outline-primary btn-sm w-100 d-flex align-items-center justify-content-center" %>

  <%= link_to "Changer email / mot de passe",
        edit_user_registration_path,
        class: "btn btn-outline-secondary btn-sm w-100 d-flex align-items-center justify-content-center" %>

  <%= link_to "Supprimer mon compte",
        profile_path,
        class: "btn btn-outline-danger btn-sm w-100 d-flex align-items-center justify-content-center",
        data: { turbo_method: :delete, turbo_confirm: "Supprimer définitivement votre compte ?" } %>
</div>
