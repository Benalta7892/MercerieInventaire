<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Mon profil</h1>

  <% if current_user.admin? %>
    <span class="badge bg-primary">Admin</span>
  <% end %>
</div>

<div class="text-center mb-3">
  <% if current_user.avatar.attached? %>
    <%= image_tag current_user.avatar,
          class: "avatar mb-2",
          style: "width: 120px; height: 120px; object-fit: cover;" %>
  <% else %>
    <%= image_tag "default-avatar.jpg",
          class: "avatar mb-2",
          style: "width: 120px; height: 120px; object-fit: cover;" %>
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <p>
      <strong>Nom :</strong>
      <%= current_user.name.presence || "—" %>

      <% if current_user.admin? %>
        <span class="ms-2 badge bg-primary">Admin</span>
      <% end %>
    </p>

    <p><strong>Email :</strong> <%= current_user.email %></p>
  </div>
</div>

<div class="mt-3 d-flex gap-2">
  <%= link_to "Modifier mon profil",
        edit_profile_path,
        class: "btn btn-outline-primary btn-sm" %>

  <%= link_to "Changer email / mot de passe",
        edit_user_registration_path,
        class: "btn btn-outline-secondary btn-sm" %>

  <%= link_to "Supprimer mon compte",
        profile_path,
        class: "btn btn-outline-danger btn-sm",
        data: { turbo_method: :delete, turbo_confirm: "Supprimer définitivement votre compte ?" } %>
</div>
