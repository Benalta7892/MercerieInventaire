<div class="row g-2 align-items-center mb-3">
  <div class="col-12 col-sm">
    <h1 class="mb-0">Fournitures en stock bas</h1>
  </div>

  <div class="col-12 col-sm-auto">
    <div class="d-grid gap-2 d-sm-flex">
      <%= link_to "Fournitures", fournitures_path, class: "btn btn-outline-primary btn-sm" %>
      <%= link_to "Liste d'achats", liste_achat_path, class: "btn btn-outline-success btn-sm" %>
    </div>
  </div>
</div>


<% if @fournitures.empty? %>
  <p class="text-muted">Aucune fourniture en stock bas üéâ</p>

<% else %>

  <!-- ===== MOBILE < 500px : CARTES ===== -->
  <div class="d-block d-sm-none">
    <% @fournitures.each do |f| %>
      <div class="card shadow-sm mb-3">
        <div class="card-body">

          <div class="mb-2">
            <%= link_to f.name,
                  fourniture_path(f, return_to: request.fullpath),
                  class: "fw-semibold text-decoration-none d-block" %>

            <% if f.description.present? %>
              <div class="text-muted small">
                <%= truncate(f.description, length: 80) %>
              </div>
            <% end %>
          </div>

          <div class="mb-2 text-muted">
            <strong>Cat√©gorie :</strong>
            <%= f.category&.name || "‚Äî" %>
          </div>

          <div class="mb-3 text-muted">
            <strong>Quantit√© :</strong>
            <%= f.quantity %> <%= f.unit %>
          </div>

          <%= button_to "Ajouter √† la liste d'achat",
                liste_achat_items_path(fourniture_id: f.id),
                method: :post,
                class: "btn btn-sm btn-outline-success w-100" %>

        </div>
      </div>
    <% end %>
  </div>

  <!-- ===== DESKTOP ‚â• 500px : TABLE ===== -->
  <div class="table-responsive d-none d-sm-block">
    <table class="table align-middle">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Cat√©gorie</th>
          <th class="text-nowrap">Quantit√©</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @fournitures.each do |f| %>
          <tr>
            <td>
              <%= link_to f.name,
                    fourniture_path(f, return_to: request.fullpath),
                    class: "text-decoration-none fw-semibold" %>

              <% if f.description.present? %>
                <div class="text-muted small">
                  <%= truncate(f.description, length: 60) %>
                </div>
              <% end %>
            </td>

            <td class="text-muted">
              <%= f.category&.name || "‚Äî" %>
            </td>

            <td class="text-nowrap text-muted">
              <%= f.quantity %> <%= f.unit %>
            </td>

            <td class="text-end text-nowrap">
              <%= button_to "Ajouter √† la liste d'achat",
                    liste_achat_items_path(fourniture_id: f.id),
                    method: :post,
                    class: "btn btn-sm btn-outline-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>
