<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 fw-bold mb-0">Modifier la fourniture</h1>
  <%#= link_to "← Retour", fournitures_path, class: "btn btn-outline-secondary btn-sm" %>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <%= simple_form_for @fourniture, url: fourniture_path(@fourniture, return_to: params[:return_to], origin: params[:origin]) do |f| %>
          <%= f.error_notification %>
          <%= hidden_field_tag :return_to, params[:return_to] %>
          <%= hidden_field_tag :cancel_to, params[:cancel_to] %>
          <%= hidden_field_tag :origin, params[:origin] %>
          <% cancel =
            if params[:cancel_to] == "return_to"
              params[:return_to].presence || fournitures_path
            else
              fourniture_path(@fourniture, return_to: params[:return_to])
            end
          %>


          <div class="mb-3">
            <%= f.input :name,
                        label: "Nom",
                        input_html: { class: "form-control" },
                        label_html: { class: "form-label" } %>
          </div>

          <div class="mb-3">
            <%= f.input :category_id,
                        label: "Catégorie",
                        collection: current_user.categories.order(:name),
                        label_method: :name,
                        value_method: :id,
                        prompt: "Choisir une catégorie",
                        input_html: { class: "form-select" },
                        label_html: { class: "form-label" } %>
          </div>

          <div class="row g-3">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.input :quantity,
                            label: "Quantité",
                            input_html: { class: "form-control" },
                            label_html: { class: "form-label" } %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="mb-3">
                <%= f.input :unit,
                            label: "Unité",
                            placeholder: "ex: m, cm, pcs, bobines…",
                            input_html: { class: "form-control" },
                            label_html: { class: "form-label" } %>
              </div>
            </div>
          </div>

          <div class="row g-3">
            <div class="col-md-6">
              <div class="mb-3">
                <%= f.input :price_euros,
                  label: "Prix unitaire (€)",
                  as: :decimal,
                  input_html: { step: 0.01, class: "form-control" },
                  placeholder: "ex: 2.50" %>
              </div>
            </div>

            <div class="col-md-6">
              <div class="mb-3">
                <%= f.input :color,
                            label: "Couleur",
                            input_html: { class: "form-control" },
                            label_html: { class: "form-label" } %>
              </div>
            </div>
          </div>


          <div class="row g-3">
            <div class="col-md-12">
              <div class="mb-3">
                <%= f.input :description,
                            as: :text,
                            label: "Description",
                            input_html: { class: "form-control", rows: 4 },
                            label_html: { class: "form-label" } %>
              </div>
            </div>
          </div>


          <div class="d-flex gap-2 mt-2">
            <%= f.button :submit, "Mettre à jour", class: "btn btn-primary" %>
            <%#= link_to "Annuler", (request.referer.presence || fourniture_path(@fourniture)), class: "btn btn-outline-secondary" %>

            <%= link_to "Annuler", cancel, class: "btn btn-outline-secondary" %>


          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
