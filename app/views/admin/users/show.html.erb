<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0"><%= @user.name.presence || "—" %></h1>

  <div class="d-flex align-items-center gap-2">
    <% if @user.admin? %>
      <span class="badge bg-primary">Admin</span>
    <% end %>

    <% if @user.blocked? %>
      <span class="badge bg-warning text-dark">Bloqué</span>
    <% end %>

    <%= link_to "← Retour", admin_users_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>

<div class="text-center mb-3">
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar,
          class: "avatar mb-2",
          style: "width: 120px; height: 120px; object-fit: cover;" %>
  <% else %>
    <%= image_tag "default-avatar.jpg",
          class: "avatar mb-2",
          style: "width: 120px; height: 120px; object-fit: cover;" %>
  <% end %>
</div>

<div class="card shadow-sm mb-3">
  <div class="card-body">
    <p>
      <strong>Nom :</strong>
      <%= @user.name.presence || "—" %>

      <% if @user.admin? %>
        <span class="ms-2 badge bg-primary">Admin</span>
      <% end %>

      <% if @user.blocked? %>
        <span class="ms-2 badge bg-warning text-dark">Bloqué</span>
      <% end %>
    </p>

    <p><strong>Email :</strong> <%= @user.email %></p>
  </div>
</div>

<div class="mt-3 d-flex gap-2">
  <% if @user != current_user && !@user.admin? %>
    <% if @user.blocked? %>
      <%= button_to "Débloquer",
            admin_user_path(@user, blocked: false),
            method: :patch,
            class: "btn btn-sm btn-outline-success" %>
    <% else %>
      <%= button_to "Bloquer",
            admin_user_path(@user, blocked: true),
            method: :patch,
            class: "btn btn-sm btn-outline-warning" %>
    <% end %>

    <%= button_to "Supprimer",
          admin_user_path(@user),
          method: :delete,
          class: "btn btn-sm btn-outline-danger",
          data: { turbo_confirm: "Supprimer ce user ?" } %>
  <% else %>
    <button class="btn btn-sm btn-outline-secondary" disabled>Actions désactivées sur l'admin</button>
    <%# <span class="text-muted small">(ton compte / admin)</span> %>
  <% end %>
</div>
