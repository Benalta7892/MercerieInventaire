<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>

<%= link_to "Nouvelle catégorie", new_category_path %>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category) %>
      <%= link_to "Éditer", edit_category_path(category) %>
      <%= link_to "Supprimer", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette catégorie ?" } %>
    </li>
  <% end %>
</ul>
