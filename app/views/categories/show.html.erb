<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0"><%= @category.name %></h1>

  <% back = params[:return_to].presence || categories_path %>

  <div class="d-flex gap-2">
    <%= link_to "← Retour",
          back,
          class: "btn btn-outline-secondary btn-sm" %>

    <%= link_to "Ajouter une fourniture",
          new_fourniture_path(category_id: @category.id),
          class: "btn btn-outline-primary btn-sm" %>

    <%= link_to "Liste d'achats",
          liste_achat_path,
          class: "btn btn-outline-success btn-sm" %>
  </div>
</div>

<% if @category.fournitures.empty? %>
  <p class="text-muted">Aucune fourniture dans cette catégorie.</p>

  <%= link_to "Ajouter une fourniture",
        new_fourniture_path(category_id: @category.id, return_to: request.fullpath),
        class: "btn btn-primary btn-sm" %>
<% else %>
  <div class="table-responsive">
    <table class="table align-middle">
      <thead>
        <tr>
          <th>Nom</th>
          <th class="text-nowrap">Quantité</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @category.fournitures.order(:name).each do |f| %>
          <tr>
            <td>
              <%= link_to f.name, fourniture_path(f, return_to: request.fullpath, origin: params[:origin]), class: "text-decoration-none fw-semibold" %>
              <% if f.description.present? %>
                <div class="text-muted small"><%= truncate(f.description, length: 60) %></div>
              <% end %>
            </td>

            <td class="text-nowrap text-muted">
              <%= f.quantity %> <%= f.unit %>
            </td>

            <td class="text-end text-nowrap">
              <%= button_to "Ajouter à la liste",
                    liste_achat_items_path(fourniture_id: f.id),
                    method: :post,
                    class: "btn btn-sm btn-outline-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
