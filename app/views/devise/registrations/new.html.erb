<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <h1 class="h4 fw-bold mb-1">Créer un compte</h1>
        <p class="text-muted mb-4">Commence à organiser ton inventaire.</p>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="mb-3">
            <%= f.input :name,
                        label: "Nom",
                        required: true,
                        input_html: { class: "form-control" },
                        label_html: { class: "form-label" } %>
          </div>

          <div class="mb-3">
            <%= f.input :email,
                        label: "Email",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control" },
                        label_html: { class: "form-label" } %>
          </div>

          <div class="mb-3">
            <%= f.input :password,
                        label: "Mot de passe",
                        required: true,
                        hint: (@minimum_password_length ? "#{@minimum_password_length} caractères minimum" : nil),
                        input_html: { autocomplete: "new-password", class: "form-control" },
                        label_html: { class: "form-label" } %>
          </div>

          <div class="mb-3">
            <%= f.input :password_confirmation,
                        label: "Confirmation du mot de passe",
                        required: true,
                        input_html: { autocomplete: "new-password", class: "form-control" },
                        label_html: { class: "form-label" } %>
          </div>

          <div class="d-grid">
            <%= f.button :submit, "Créer mon compte", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3">
          <p>Déjà un compte ? </p>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
