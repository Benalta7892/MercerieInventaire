<div class="row justify-content-center">
  <div class="col-12 col-md-8 col-lg-5">
    <div class="card shadow-sm bg-light">
      <div class="card-body p-4">
        <h1 class="h4 fw-bold mb-1">Mot de passe oublié</h1>
        <p class="text-muted mb-4">On t’envoie un lien pour le réinitialiser.</p>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="mb-3">
            <%= f.input :email,
                        label: "Email",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control bg-white" },
                        label_html: { class: "form-label" } %>
          </div>

          <div class="d-grid">
            <%= f.button :submit, "Réinitialisater", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
