<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Ma liste d’achats</h1>

  <div class="d-flex gap-2">
    <%= link_to "Fournitures",
          fournitures_path,
          class: "btn btn-sm btn-outline-primary" %>

    <%= link_to "Voir tous les stocks bas",
          stock_bas_fournitures_path,
          class: "btn btn-sm btn-outline-warning" %>
  </div>
</div>

<% if @items.empty? %>
  <p class="text-muted">Aucune fourniture dans la liste pour le moment.</p>
<% else %>
  <div class="table-responsive">
    <table class="table align-middle">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Catégorie</th>
          <th class="text-nowrap">Quantité</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to item.fourniture.name,
                    fourniture_path(item.fourniture),
                    class: "text-decoration-none fw-semibold" %>

              <% if item.fourniture.description.present? %>
                <div class="text-muted small">
                  <%= truncate(item.fourniture.description, length: 60) %>
                </div>
              <% end %>
            </td>

            <td class="text-muted">
              <%= item.fourniture.category&.name || "—" %>
            </td>

            <td class="text-nowrap text-muted">
              <%= item.quantity.presence || "—" %> <%= item.fourniture.unit %>
            </td>

            <td class="text-end text-nowrap">
              <%= link_to "Mettre à jour", edit_fourniture_path(item.fourniture), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Retirer",
                    liste_achat_item_path(item),
                    class: "btn btn-sm btn-outline-danger",
                    data: { turbo_method: :delete, turbo_confirm: "Retirer cette fourniture de la liste ?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
